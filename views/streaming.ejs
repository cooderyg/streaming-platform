    >
      <!-- header Navbar start -->
      <%-include('includes/header-navbar.ejs') %>
      <!-- header Navbar end -->
      <div class="container-fluid">
        <div class="row">
          <div class="card col-9" id="media-container">
            <!-- 비디오 자리 -->
            <video
              id="video"
              width="100%"
              height="100%"

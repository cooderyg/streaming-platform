            <div class="card card-body blur shadow-blur overflow-hidden">
              <div class="row gx-4">
                <div class="col-auto">
                  <div class="avatar avatar-xl position-relative channel-img">
                    <!-- 채널이미지자리 -->
                  </div>
                </div>
                <div class="col-auto my-auto">
                  <div class="h-100" id="live-info-container">
                    <!-- 라이브 제목, 채널 이름(링크) -->
                  </div>
                </div>
                <div
                  class="col-auto my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3"
